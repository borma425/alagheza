{% extends "base.twig" %}

{% block grid_content %}

{% include "components/main_section.twig" with { title: "جميع الأقسام ", desc: " الموقع الأول لمراجعة الأجهزة الكهربائية في مصر والشرق الأوسط بناء على اراء المهندسين المحترفين وتجارب المستخدمين السابقين. " } %}

{% include "components/smart-search.twig" %}

<section class="categories">
				<div class="container">

					<div class="categories-grid">

{% for post in sections %}

						<a href="{{ post.link }}" class="category-card">
							<div class="category-icon">
								<img src="{{ post.thumbnail.src | default(defaultimg) }}" alt="{{ post.title }}" width="64" height="64" loading="lazy">
							</div>
							<h3 class="category-name">{{ post.title }}</h3>
							<span class="category-number">0{{ loop.index }}</span>
						</a>
{% endfor %}

					</div>
				</div>

			</section>

{% endblock %}
