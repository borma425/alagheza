    <h1>Product Information</h1>
    <p>Product Name: {{ product_name }}</p>
</article>





{% set homeName =        site.name %}
{% set homeUrl  = site.link %}
{% set homeDescription = site.description %}
{% set PostDescription = post.excerpt.length(50).read_more(false) %}
{% set thumbnail =
fn('is_home') or
fn('is_front_page') ? fn('asset_url',"thumnail-1200x630.jpg","/img/default/") :
post.thumbnail.src
%}

{% set mainTitle  = post.title %}
{# {% set mainTitle  = post.title %} #}

{% set Title =
fn('is_post_type_archive','article') ?  ' أحدث المقالات ﺗﻨﻔﻴــﺬ وﺗﺼﻤﻴــﻢ وإﻧﺸــﺎء ﺷــﺒﻜﺎت اﻟﻐــﺎز   ' :
fn('is_post_type_archive','products') ?  ' أحدث منتجات ﺗﻨﻔﻴــﺬ وﺗﺼﻤﻴــﻢ وإﻧﺸــﺎء ﺷــﺒﻜﺎت اﻟﻐــﺎز   ' :
fn('is_post_type_archive','success-partners') ?  '  شركاء النجاح   ' :
fn('is_home') or fn('is_front_page') ? homeName ~ " - " ~ homeDescription :
fn('is_singular') ?   mainTitle:
fn('is_search') ?  search_query :
fn('is_404') ? "  404 - Not Found:" ~ homeName : homeName
%}

{% set Description =
fn('is_post_type_archive') ?  Title :
PostDescription ?  PostDescription : homeDescription
%}

{% set datePublishedTimestamp = post.date | date('U') %}
{% set dateModifiedTimestamp = post.modified | date('U') %}
{% set articleBody =  post.post_content|shortcodes %}
{# Define your pros and cons as strings containing HTML lists #}
{% set pros_html = '<ul>
    <li>2 موتور</li>
    <li>إضاءة فعالة من حيث الطاقة</li>
    <li>تهوية قوية</li>
    <li>3 سرعات</li>
    <li>بناء متين</li>
    <li>تصميم أنيق</li>
    <li>تشغيل سهل</li>
    <li>مرشحات قابلة للغسل</li>
</ul>' %}

{% set cons_html = '<ul>
    <li>غير معروف بكثرة</li>
    <li>مصنوع من خامات متوسطة</li>
</ul>' %}

{# Remove the <ul> and split the list by <li> tags. This strips the tags but keeps the content #}
{% set pros_list = pros_html | replace({'<ul>': '', '</ul>': '', '<li>': '', '</li>': '|'}) | split('|') %}
{% set cons_list = cons_html | replace({'<ul>': '', '</ul>': '', '<li>': '', '</li>': '|'}) | split('|') %}


<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Product",
  "name": "{{ post.title | trim }}",
  "review": {
    "@type": "Review",
    "name": "{{ post.title }} review",  // Dynamic name for the review
    "author": {
      "@type": "Person",
      "name": "{{ review_author_name }}"  // Replace with the actual author's name
    },
    "positiveNotes": {
      "@type": "ItemList",
      "itemListElement": [
        {% set position = 1 %}  // Initialize position counter
        {% for item in pros_list %}
          {% if item|trim is not empty %}
          {
            "@type": "ListItem",
            "position": {{ position }},
            "name": "{{ item|trim }}"
          }{% if not loop.last %},{% endif %}
          {% set position = position + 1 %}  // Increment position
          {% endif %}
        {% endfor %}
      ]
    },
    "negativeNotes": {
      "@type": "ItemList",
      "itemListElement": [
        {% set position = 1 %}  // Initialize position counter
        {% for item in cons_list %}
          {% if item|trim is not empty %}
          {
            "@type": "ListItem",
            "position": {{ position }},
            "name": "{{ item|trim }}"
          }{% if not loop.last %},{% endif %}
          {% set position = position + 1 %}  // Increment position
          {% endif %}
        {% endfor %}
      ]
    }
  }
}
</script>






<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": "{{ mainTitle }}",
  "description": "{{ Description }}",  // Use a dynamic variable for the article description
  "datePublished": "{{ datePublishedTimestamp }}",
  "dateModified": "{{ dateModifiedTimestamp }}",
  "inLanguage": "ar",
  "image": {
    "@type": "ImageObject",
    "url": "{{ post.thumbnail.src }}"
  },
  "articleBody": "{{ articleBody|striptags }}",
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": "{{ post.link }}"
  }
}
</script>




<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Product",
  "name": "{{ product_name | trim }}",  {# Ensure this is trimmed to remove whitespace #}
  "image": "{{ product_image | trim }}",  {# Ensure this is trimmed to remove whitespace #}
  "description": "{{ product_desc | trim }}",  {# Ensure this is trimmed to remove whitespace #}
  "brand": {
    "@type": "Brand",
    "name": "{{ product_brand | trim }}"  {# Ensure this is trimmed to remove whitespace #}
  },
  "sku": "{{ product_sku | trim }}",  {# Ensure this is trimmed to remove whitespace #}
  "offers": {
    "@type": "Offer",
    "priceCurrency": "EGP",
    "price": "{{ product_price | trim }}",  {# Ensure this is trimmed to remove whitespace #}
    "itemCondition": "https://schema.org/NewCondition",
    "availability": "https://schema.org/InStock",
    "url": "{{ post.link | trim }}"  {# Ensure this is trimmed to remove whitespace #}
  },
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": "{{ product_total_rating | trim }}",  {# Ensure this is trimmed to remove whitespace #}
    "bestRating": "10",
    "worstRating": "0",
    "ratingCount": "{{ product_rating_count | trim }}"  {# Ensure this is trimmed to remove whitespace #}
  },
  "review": {
    "@type": "Review",
    "datePublished": "{{ datePublishedTimestamp }}",
    "reviewRating": {
      "@type": "Rating",
      "ratingValue": "{{ product_total_rating | trim }}",  {# Ensure this is trimmed to remove whitespace #}
      "bestRating": "10",
      "worstRating": "0"
    },
    "reviewBody": "{{ product_reviewBody | trim }}"  {# Ensure this is trimmed to remove whitespace #}
  }
}
</script>






